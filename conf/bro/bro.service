[Unit]
Description=Bro
After=network.target

[Service]
ExecStartPre=-{{ bro_path }}/bin/broctl cleanup
ExecStartPre={{ bro_path }}/bin/broctl check
ExecStartPre={{ bro_path }}/bin/broctl install
ExecStart={{ bro_path }}/bin/broctl start
ExecStop={{ bro_path }}/bin/broctl stop
RestartSec=10s
Type=oneshot
RemainAfterExit=yes
TimeoutStopSec=600

[Install]
WantedBy=multi-user.target